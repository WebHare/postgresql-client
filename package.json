{
  "name": "postgresql-client",
  "description": "Enterprise level PostgreSQL client for JavaScript",
  "version": "2.5.8",
  "author": "Panates",
  "private": true,
  "contributors": [
    "Eray Hanoglu <e.hanoglu@panates.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/postgresql-client.git"
  },
  "dependencies": {
    "doublylinked": "^2.5.2",
    "lightning-pool": "^4.2.1",
    "postgres-bytea": "^3.0.0",
    "power-tasks": "^1.7.0",
    "putil-merge": "^3.10.3",
    "putil-promisify": "^1.10.0",
    "putil-varhelpers": "^1.6.5"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.8",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.5",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "auto-changelog": "^2.4.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.40.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-cleanup": "^0.2.6",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "lint": "eslint .",
    "clean": "npm run clean:src && npm run clean:dist",
    "clean:dist": "rimraf build coverage",
    "clean:src": "ts-cleanup -s src --all | ts-cleanup -s test",
    "prebuild": "npm run clean:dist && npm run lint",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "npm run postbuild:copyfiles && node ./support/postbuild.cjs",
    "postbuild:copyfiles": "cp ./support/package.cjs.json ./build/cjs/package.json && cp LICENSE README.md CHANGELOG.md ./build",
    "test": "jest",
    "precover": "rimraf coverage",
    "cover": "jest --runInBand --detectOpenHandles --coverage",
    "precitest": "rimraf coverage",
    "citest": "jest --coverage --coverageReporters=lcov",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "type": "module",
  "types": "typings/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    },
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.js"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "cjs/",
    "esm/",
    "typings/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "backend",
    "postgresql",
    "postgres",
    "pg",
    "postgre",
    "driver",
    "client",
    "database",
    "db",
    "rdbms",
    "sql",
    "typescript",
    "ts",
    "esm"
  ]
}
